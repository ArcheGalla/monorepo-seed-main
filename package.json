{
  "name": "repo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "docker:web": "docker build -f apps/web/Dockerfile -t my-web .",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "rm -rf .turbo"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.5.3"
  },
  "packageManager": "npm@10.5.0",
  "engines": {
    "node": ">=18"
  }
}
